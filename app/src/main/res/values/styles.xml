<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:buttonStyle">@style/SleepSenseButtons</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->

    </style>

    <!-- Base application theme. -->
    <style name="InStoreAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:buttonStyle">@style/SleepSenseButtons</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->

    </style>

    <style name="SleepSenseButtons" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/splashBackground</item>
    </style>

    <style name="firmnessLabel">
        <item name="android:textSize">9sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#B2B3B3</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="styledButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/sleep_sense_button_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/control_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OnboardingQuestionsView">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="OnboardingText">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/onboarding_title_text</item>
    </style>

    <style name="OnboardingText.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="font">AvertaBold</item>
    </style>

    <style name="OnboardingText.Desc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="font">AvertaRegular</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="OnboardingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/onboarding_button_background</item>
        <item name="android:textColor">@drawable/onboarding_button_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/onboarding_leading_margin</item>
        <item name="android:layout_marginLeft">@dimen/onboarding_leading_margin</item>
        <item name="android:layout_marginEnd">@dimen/onboarding_leading_margin</item>
        <item name="android:layout_marginRight">@dimen/onboarding_leading_margin</item>
        <item name="font">AvertaBold</item>
    </style>

    <style name="OnboardingButton.Text">
        <item name="android:background">@null</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="OnboardingButton.Text.Skip">
        <item name="android:text">@string/button_skip</item>
    </style>

    <style name="OnboardingButton.Continue">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:text">@string/continue_text</item>
    </style>

    <style name="OnboardingRulerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#fff</item>
        <item name="font">AvertaRegular</item>
    </style>

    <style name="OnboardingRulerText.Small">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OnboardingRulerText.SideLabel">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="OnboardingRulerVerticalLine">
        <item name="android:layout_width">@dimen/rule_line_height</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/ruler_line_background</item>
        <item name="android:layout_marginEnd">@dimen/rule_line_margin_bottom</item>
        <item name="android:layout_marginBottom">-8dp</item>
    </style>

    <style name="OnboardingRulerVerticalLine.Big">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>



    <style name="OnboardingRulerHorizontalLine">
        <item name="android:layout_height">@dimen/rule_line_height</item>
        <item name="android:layout_marginBottom">@dimen/rule_line_margin_bottom</item>
        <item name="android:background">@color/ruler_line_background</item>
    </style>
    <style name="OnboardingRulerHorizontalLine.Big">
        <item name="android:layout_width">50dp</item>
    </style>
    <style name="OnboardingRulerHorizontalLine.Medium">
        <item name="android:layout_width">25dp</item>
    </style>
    <style name="OnboardingRulerHorizontalLine.Small">
        <item name="android:layout_width">11dp</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textAlignment">textStart</item>
        <item name="font">AvertaRegular</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/settings_background_item_text</item>
    </style>

    <style name="SettingsText.GrayedOut">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/settings_text_greyed_out</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SettingsText.ResetDevice">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SettingsText.WeightedText">
        <item name="android:layout_weight">2</item>
    </style>


    <style name="SettingsTitle">
        <item name="android:textColor">@color/settings_header_text</item>
        <item name="font">AvertaBold</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="SettingsText.Toolbar">
        <item name="android:textSize">@dimen/settings_title_text_size</item>
        <item name="android:textColor">@color/settings_header_text</item>
        <item name="android:textAlignment">center</item>
        <item name="font">AvertaBold</item>
    </style>

    <style name="SettingsText.Row">
        <item name="android:paddingLeft">@dimen/settings_text_padding_left</item>
        <item name="android:paddingStart">@dimen/settings_text_padding_left</item>
        <item name="android:paddingRight">@dimen/settings_text_padding_right</item>
        <item name="android:paddingEnd">@dimen/settings_text_padding_right</item>
        <item name="android:paddingBottom">@dimen/settings_text_padding_regular</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableEnd">@drawable/more_chevron_normal</item>
        <item name="android:drawableRight">@drawable/more_chevron_normal</item>
        <item name="android:background">@drawable/settings_background_button</item>
    </style>

    <style name="SettingsText.Row.NoBackground">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="SettingsText.Blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/device_fragment_item_text_blue</item>
    </style>


    <style name="SettingsButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/contact_us_button</item>
        <item name="font">AvertaBold</item>>
    </style>

    <style name="SettingsButton.Blue">
        <item name="android:background">@drawable/settings_button_blue</item>

    </style>

    <style name="Dashboard">

    </style>
    <style name="Dashboard.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/statisticsItemExpandedTextColor</item>
        <item name="font">AvertaRegular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <!--TODO check if circle is redundant-->
    <style name="Dashboard.Text.Red">
        <item name="android:textColor">@color/statisticsItemCircleRed</item>
    </style>

    <style name="Dashboard.TitleBarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/onBoardHeaderTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="font">AvertaBold</item>>
        <item name="android:gravity">center</item>>
    </style>



    <style name="Dashboard.Text.Title">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/control_color</item>
        <item name="android:textSize">15sp</item>
        <item name="font">AvertaRegular</item>
    </style>

    <style name="Dashboard.Text.Title.Grey">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/indicator_color</item>
    </style>

    <style name="Dashboard.ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
