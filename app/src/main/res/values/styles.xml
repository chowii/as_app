<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:buttonStyle">@style/SleepSenseButtons</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->

    </style>

    <!-- Base application theme. -->
    <style name="InStoreAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:buttonStyle">@style/SleepSenseButtons</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->

    </style>

    <style name="SleepSenseButtons" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/splashBackground</item>
    </style>

    <style name="firmnessLabel">
        <item name="android:textSize">9sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#B2B3B3</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="styledButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/sleep_sense_button_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/control_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OnboardingQuestionsView">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="OnboardingText">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/onboarding_title_text</item>
    </style>

    <style name="OnboardingText.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="font">AvertaBold</item>
    </style>

    <style name="OnboardingText.Desc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="font">AvertaRegular</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="OnboardingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/onboarding_button_background</item>
        <item name="android:textColor">@drawable/onboarding_button_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/onboarding_leading_margin</item>
        <item name="android:layout_marginLeft">@dimen/onboarding_leading_margin</item>
        <item name="android:layout_marginEnd">@dimen/onboarding_leading_margin</item>
        <item name="android:layout_marginRight">@dimen/onboarding_leading_margin</item>
        <item name="font">AvertaBold</item>
    </style>

    <style name="OnboardingButton.Text">
        <item name="android:background">@null</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="OnboardingButton.Text.Skip">
        <item name="android:text">@string/button_skip</item>
    </style>

    <style name="OnboardingButton.Continue">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:text">@string/continue_text</item>
    </style>

    <style name="OnboardingRulerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#fff</item>
        <item name="font">AvertaRegular</item>
    </style>

    <style name="OnboardingRulerText.Small">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OnboardingRulerText.SideLabel">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="OnboardingRulerVerticalLine">
        <item name="android:layout_width">@dimen/rule_line_height</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/ruler_line_background</item>
        <item name="android:layout_marginEnd">@dimen/rule_line_margin_bottom</item>
        <item name="android:layout_marginBottom">-8dp</item>
    </style>

    <style name="OnboardingRulerVerticalLine.Big">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>



    <style name="OnboardingRulerHorizontalLine">
        <item name="android:layout_height">@dimen/rule_line_height</item>
        <item name="android:layout_marginBottom">@dimen/rule_line_margin_bottom</item>
        <item name="android:background">@color/ruler_line_background</item>
    </style>
    <style name="OnboardingRulerHorizontalLine.Big">
        <item name="android:layout_width">50dp</item>
    </style>
    <style name="OnboardingRulerHorizontalLine.Medium">
        <item name="android:layout_width">25dp</item>
    </style>
    <style name="OnboardingRulerHorizontalLine.Small">
        <item name="android:layout_width">11dp</item>
    </style>

    <style name="SettingsText">

    </style>

    <style name="ContactUsButton">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/contact_us_button</item>
    </style>

    <style name="ContactUsTitle">
        <item name="android:textColor">#49484A</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContactUsText">
        <item name="android:textColor">#9E9B9B</item>
    </style>

    <style name="SettingsFragment">
        <item name="android:textSize">14sp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="SettingsFragmentToolbar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/settings_header_title_text_color</item>
        <item name="android:clipToPadding">false</item>
        <item name="font">Averta Bold</item>
    </style>


    <style name="SettingsFragmentRpw">
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/settings_fragment_background_item_text</item>
        <item name="android:clipToPadding">false</item>
        <item name="font">Averta Regular</item>
        <item name="android:drawableEnd">@drawable/more_chevron_normal</item>
        <item name="android:drawableRight">@drawable/more_chevron_normal</item>
        <item name="android:background">@drawable/settings_background_button</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

</resources>
