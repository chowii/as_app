<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:buttonStyle">@style/SleepSenseButtons</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->

    </style>

    <!-- Base application theme. -->
    <style name="InStoreAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:buttonStyle">@style/SleepSenseButtons</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->

    </style>

    <style name="SleepSenseButtons" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/splashBackground</item>
    </style>

    <style name="firmnessLabel">
        <item name="android:textSize">9sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#B2B3B3</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="styledButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/sleep_sense_button_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/control_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OnboardingQuestionsView">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="OnboardingTitleTextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/onboarding_title_text</item>
        <item name="font">AvertaBold"</item>
    </style>

    <style name="OnboardingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:background">@drawable/onboarding_button_background</item>
        <item name="android:textColor">@drawable/onboarding_button_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/onboarding_leading_margin</item>
        <item name="android:layout_marginLeft">@dimen/onboarding_leading_margin</item>
        <item name="android:layout_marginEnd">@dimen/onboarding_leading_margin</item>
        <item name="android:layout_marginRight">@dimen/onboarding_leading_margin</item>
        <item name="font">AvertaBold</item>
    </style>

    <style name="OnboardingTextButton" parent="OnboardingButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>
