<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background_gradient_new"
tools:context="au.com.ahbeard.sleepsense.fragments.onboarding.KnowEachOtherFragment">

<TextView
    android:text="Header"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:layout_marginBottom="180dp"
    android:textSize="@dimen/text_header_font_size"
    android:textColor="@color/whiteTextColor"
    android:textStyle="bold"
    android:id="@+id/textTitle" />

    <TextView
        android:text="Other"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="110dp"
        android:textSize="@dimen/text_other_font_size"
        android:textColor="@color/whiteTextColor"
        android:id="@+id/textOther" />

    <Button
        android:id="@+id/buttonContinue"
        android:layout_gravity="bottom"
        android:onClick="buttonSingleClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:padding="@dimen/button_padding"
        android:textSize="@dimen/button_font_size"
        android:background="@drawable/sleep_sense_button_blue"
        android:textColor="@drawable/button_text_color"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:text="Button" />

</FrameLayout>
