<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/firmnessBackground"
            android:gravity="top"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <au.com.ahbeard.sleepsense.widgets.StyledTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                android:text="More"
                android:textColor="#4A4A4A"
                android:textSize="15sp"
                app:typeface="OpenSansLight"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/help_icon_normal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#DBE3E6"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/more_layout_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/more_divider"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:showDividers="middle|beginning|end">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="20dp">

            <au.com.ahbeard.sleepsense.widgets.StyledButton
                android:id="@+id/debug_button_generate_fake_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sleep_sense_button_blue"
                android:text="Generate Fake Data"
                android:textColor="#fff"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <au.com.ahbeard.sleepsense.widgets.StyledButton
                android:id="@+id/debug_button_re_run_batch_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sleep_sense_button_blue"
                android:text="Re-run batch analysis"
                android:textColor="#fff"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <au.com.ahbeard.sleepsense.widgets.StyledButton
                android:id="@+id/debug_button_new_onboarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sleep_sense_button_blue"
                android:text="New On-Boarding"
                android:textColor="#fff"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
