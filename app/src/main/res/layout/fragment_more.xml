<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="top"
              android:background="@color/firmnessBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:layout_weight="1"
            android:text="More"
            android:textSize="15sp"
            android:lineSpacingExtra="5sp"
            android:textColor="#4A4A4A"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:typeface="OpenSansLight"/>
        <ImageView
            android:layout_marginTop="10dp" android:layout_marginRight="20dp"
            android:layout_gravity="right|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/help_icon_normal"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="#DBE3E6" android:layout_gravity="bottom"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:layout_margin="20dp">
        <Button
            android:id="@+id/debug_button_power_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pop Power Management Settings" />
        <Button
            android:id="@+id/debug_button_generate_fake_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Fake Data" />
        <Button
            android:id="@+id/sleep_tracking_button_batch_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Run Batch Analysis" />
        <Button
            android:id="@+id/debug_button_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redo OnBoarding" />
    </LinearLayout>


</LinearLayout>
