<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.OnBoardActivity">

    <LinearLayout
        android:id="@+id/on_board_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/on_board_image_view_phone"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/phone_happy"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:layout_weight="1"/>

        <FrameLayout
            android:id="@+id/on_board_layout_container"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_weight="6">

        </FrameLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/on_board_layout_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splashBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_logo"/>

    </LinearLayout>

</FrameLayout>
