<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.onboarding.OnBoardingChooseSideFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/onboarding_filling_mattress_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:src="@drawable/onboarding_filling_mattress_background" android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/onboarding_image_filling_mattress_happy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:src="@drawable/onboarding_filling_mattress_happy" android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/onboarding_image_filling_mattress_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:src="@drawable/onboarding_filling_mattress_in" android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/onboarding_image_filling_mattress_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:src="@drawable/onboarding_filling_mattress_out" android:adjustViewBounds="true"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="@color/onBoardHeaderTextColor"
            app:typeface="OpenSansSemibold"
            android:text="Now I'm going to fill the mattress with air"/>

        <View android:layout_width="wrap_content" android:layout_height="25dp"/>

        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/onBoardHeaderTextColor"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:lineSpacingExtra="10dp"
            app:typeface="OpenSansRegular"
            android:text="Lorem ipsum dolor sequent pravin semper ardor quantic, burdoc sambit."/>

        <View android:layout_width="wrap_content" android:layout_height="45dp"/>

        <au.com.ahbeard.sleepsense.widgets.StyledButton
            android:id="@+id/on_board_button_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:alpha="0.0"
            android:background="@drawable/sleep_sense_button_blue"
            android:stateListAnimator="@null"
            android:text="Continue"
            android:textColor="#fff"/>

    </LinearLayout>

</FrameLayout>
