<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              tools:context="au.com.ahbeard.sleepsense.fragments.OnBoardInitialFragment">

    <au.com.ahbeard.sleepsense.widgets.StyledTextView
        android:id="@+id/on_board_text_view_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="23sp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/onBoardHeaderTextColor"
        app:typeface="OpenSansSemibold"
        android:text="Success"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

    <au.com.ahbeard.sleepsense.widgets.StyledTextView
        android:id="@+id/on_board_text_view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/onBoardBodyTextColor"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:lineSpacingExtra="10dp"
        app:typeface="OpenSansRegular"
        android:text="This is what I found."/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/on_board_image_view_mattress_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/success_tick"
                android:layout_margin="12dp"/>

            <au.com.ahbeard.sleepsense.widgets.StyledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/onBoardHeaderTextColor"
                app:typeface="OpenSansSemibold"
                android:text="MATTRESS"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/on_board_image_view_base_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/success_tick"
                android:layout_margin="12dp"/>

            <au.com.ahbeard.sleepsense.widgets.StyledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/onBoardHeaderTextColor"
                app:typeface="OpenSansSemibold"
                android:text="BASE"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/on_board_image_view_tracker_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/success_tick"
                android:layout_margin="12dp"/>

            <au.com.ahbeard.sleepsense.widgets.StyledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/onBoardHeaderTextColor"
                app:typeface="OpenSansSemibold"
                android:text="SLEEP TRACKER"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/on_board_button_continue"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/button"
        android:layout_margin="15dp" android:textColor="#fff" android:textSize="13.45dp" android:text="Continue"/>

    <au.com.ahbeard.sleepsense.widgets.StyledTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="11dp"
        android:textColor="#B2BAC3"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:typeface="OpenSansRegular"
        android:text="Having trouble connecting a device?"/>

</LinearLayout>
