<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/settings_row_size"
    android:id="@+id/linearLayout"
    android:background="@null"
    android:paddingLeft="@dimen/settings_text_padding_left"
    android:paddingRight="@dimen/settings_text_padding_right"
    android:paddingBottom="10dp"
    android:weightSum="4"
    >

    <au.com.ahbeard.sleepsense.widgets.SSTextView
        android:id="@+id/head"
        tools:text="My Profile"
        android:layout_height="match_parent"
        style="@style/SettingsText.Row"
        />

</LinearLayout>