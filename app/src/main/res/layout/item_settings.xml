<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:background="@color/settings_fragment_background_item"

    android:layout_marginLeft="@dimen/settings_text_padding_left"
    android:layout_marginRight="@dimen/settings_text_padding_right"
    android:layout_marginTop="@dimen/settings_text_padding_left"
    android:layout_marginBottom="@dimen/settings_text_padding_regular"

    android:weightSum="4">


    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        tools:text="My Profile"
        android:padding="@dimen/settings_text_padding_regular"
        android:textSize="@dimen/settings_text_size"

        android:textColor="@color/settings_fragment_background_item_text"

        android:paddingRight="@dimen/settings_text_padding_right"
        android:paddingLeft="@dimen/settings_text_padding_left"
        android:paddingBottom="@dimen/settings_text_padding_regular"
        android:paddingStart="@dimen/settings_text_padding_left"

        android:drawableEnd="@drawable/more_chevron_normal"
        android:drawableRight="@drawable/more_chevron_normal"


        android:gravity="center|left"

        android:background="@drawable/shadow_settings_2"

        />



</LinearLayout>