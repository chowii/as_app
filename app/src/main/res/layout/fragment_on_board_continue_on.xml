<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="au.com.ahbeard.sleepsense.fragments.OnBoardInitialFragment">

    <au.com.ahbeard.sleepsense.widgets.StyledTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="23dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/onBoardHeaderTextColor"
        app:typeface="OpenSansSemibold"
        android:text="Welcome"/>

    <View android:layout_width="wrap_content" android:layout_height="25dp"/>

    <au.com.ahbeard.sleepsense.widgets.StyledTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/onBoardBodyTextColor"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:lineSpacingExtra="10dp"
        app:typeface="OpenSansRegular"
        android:text="Before you lie down let's get you set up!\nBegin by placing me (your phone) on your side of the bed"/>

    <View android:layout_width="wrap_content" android:layout_height="39dp"/>

    <au.com.ahbeard.sleepsense.widgets.StyledTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@color/onBoardFooterTextColor"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:lineSpacingExtra="10dp"
        app:typeface="OpenSansRegular"
        android:text="Make sure Your Sleepsense bed is plugged in &amp; your phone has Bluetooth enabled"/>

</LinearLayout>
