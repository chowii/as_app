<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.onboarding.OnBoardingItemsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/onboarding_image_view_background_wall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:src="@drawable/onboarding_background_wall" android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/onboarding_image_view_background_furniture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:src="@drawable/onboarding_background_furniture" android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/onboarding_image_view_background_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:src="@drawable/onboarding_background_base" android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/onboarding_image_view_bed_with_headboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:src="@drawable/onboarding_background_bed_with_headboard" android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/onboarding_image_view_background_beddit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:src="@drawable/onboarding_background_beddit" android:adjustViewBounds="true"/>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_margin="35dp">

        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:id="@+id/on_boarding_items_text_view_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#fff"
            app:typeface="OpenSansSemibold"
            tools:text="Lorem ipsum dolor"/>

        <View android:layout_width="wrap_content" android:layout_height="25dp"/>

        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:id="@+id/on_boarding_items_text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#fff"
            android:lineSpacingExtra="5dp"
            app:typeface="OpenSansRegular"
            tools:text="Dolor sequent borat carbor semper fidelat"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/onboarding_layout_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/on_board_button_mattress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:src="@drawable/onboarding_button_mattress"/>

                <au.com.ahbeard.sleepsense.widgets.StyledTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MATTRESS"
                    android:textColor="@color/onBoardHeaderTextColor"
                    android:textSize="12dp"
                    app:typeface="OpenSansSemibold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/on_board_button_tracker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:src="@drawable/onboarding_button_sleep_tracker"/>

                <au.com.ahbeard.sleepsense.widgets.StyledTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SLEEP TRACKER"
                    android:textColor="@color/onBoardHeaderTextColor"
                    android:textSize="12dp"
                    app:typeface="OpenSansSemibold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/on_board_button_base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:src="@drawable/onboarding_button_base"/>

                <au.com.ahbeard.sleepsense.widgets.StyledTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="BASE"
                    android:textColor="@color/onBoardHeaderTextColor"
                    android:textSize="12dp"
                    app:typeface="OpenSansSemibold"/>

            </LinearLayout>

        </LinearLayout>

        <au.com.ahbeard.sleepsense.widgets.StyledButton
            android:id="@+id/on_board_button_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/sleep_sense_button_blue"
            android:stateListAnimator="@null"
            android:text="@string/button_continue"
            android:textAllCaps="true"
            android:textColor="#fff"/>

    </LinearLayout>

</FrameLayout>
