<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.onboarding.OnBoardingPlacePhoneFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<ImageView-->
            <!--android:id="@+id/onboarding_image_view_place_phone_bed"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:alpha="1.0"-->
            <!--android:src="@drawable/onboarding_background_place_phone_left"-->
            <!--android:adjustViewBounds="true"/>-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="424dp"
            android:background="@drawable/light_noise_background"/>

        <LinearLayout
            android:id="@+id/onboarding_place_phone_bed"
            android:layout_width="match_parent"
            android:layout_height="424dp"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.69"
                android:background="#F9F7F4"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingTop="20dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pillow_top_linen"
                    />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/pulse_1"
            android:layout_marginTop="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:src="@drawable/pulse_circle"
            />
        <ImageView
            android:id="@+id/pulse_2"
            android:layout_marginTop="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:src="@drawable/pulse_circle"
            />
        <ImageView
            android:id="@+id/pulse_3"
            android:layout_marginTop="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:src="@drawable/pulse_circle"
            />
        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/onboarding_image_view_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:layout_gravity="center"
            android:src="@drawable/onboarding_phone_on_bed_simple" android:adjustViewBounds="true"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/gradient_white_up"
            android:layout_gravity="bottom"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appBackgroundColor"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <au.com.ahbeard.sleepsense.widgets.StyledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textColor="@color/onBoardHeaderTextColor"
                app:typeface="OpenSansSemibold"

                android:text="Place your phone on the side of the bed you sleep on"/>

            <View android:layout_width="wrap_content" android:layout_height="25dp"/>

            <au.com.ahbeard.sleepsense.widgets.StyledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#959595"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:lineSpacingExtra="5sp"
                app:typeface="OpenSansRegular"
                android:text="This will help me accurately pair to your sleep tracker"/>

            <View android:layout_width="wrap_content" android:layout_height="45dp"/>

            <au.com.ahbeard.sleepsense.widgets.StyledButton
                android:id="@+id/on_board_button_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/sleep_sense_button_blue"
                android:stateListAnimator="@null"
                android:text="My phone is on the bed"
                android:textColor="#fff"/>

        </LinearLayout>
    </LinearLayout>



</FrameLayout>
