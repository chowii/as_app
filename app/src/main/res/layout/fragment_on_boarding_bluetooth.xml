<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/onboarding_bluetooth_background"
              android:padding="24dp"
              tools:context=".fragments.onboarding.OnBoardingBluetoothFragment">

        <View android:layout_width="wrap_content" android:layout_height="160dp"/>

        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="#fff"
            app:typeface="OpenSansSemibold"
            android:text="@string/on_boarding_bluetooth_title"/>

        <View android:layout_width="wrap_content" android:layout_height="24dp"/>

        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#fff"
            android:lineSpacingExtra="10dp"
            app:typeface="OpenSansRegular"
            android:text="@string/on_boarding_bluetooth_description"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <au.com.ahbeard.sleepsense.widgets.StyledButton
        android:id="@+id/on_board_button_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/sleep_sense_button_white"
        android:stateListAnimator="@null"
        android:text="@string/on_boarding_bluetooth_button_find_my_devices"
        android:textColor="@color/whiteButtonTextColor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <au.com.ahbeard.sleepsense.widgets.StyledTextView
        android:id="@+id/on_board_text_view_find_out_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13.5sp"
        android:textColor="#fff"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:lineSpacingExtra="10dp"
        app:typeface="OpenSansRegular"
        android:text="@string/on_boarding_bluetooth_link_find_out_more"/>


</LinearLayout>
