<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_reset_button"
            android:layout_gravity="center"
            />

        <au.com.ahbeard.sleepsense.widgets.SSButton
            android:id="@+id/SSButton"
            style="@style/SettingsButton.ResetDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="Reset All Devices" />
    </LinearLayout>

    <au.com.ahbeard.sleepsense.widgets.SSTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will not lose any sleep data"
        style="@style/SettingsText.Grayed_Out"/>
</LinearLayout>