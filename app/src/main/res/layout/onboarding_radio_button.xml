<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/containerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/backgroundCircleView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_circle_solid_background"
            />
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/white_circle_border_background"
            />
    </RelativeLayout>

    <au.com.ahbeard.sleepsense.widgets.SSTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/OnboardingText.Desc"
        android:layout_below="@id/containerView"
        android:layout_centerHorizontal="true"
        />
</merge>