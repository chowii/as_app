<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/onboarding_debug_gradient">

    <include layout="@layout/onboarding_header" />

    <au.com.ahbeard.sleepsense.ui.onboarding.views.SSOnboardingRadioControl
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleTextView"
        android:layout_above="@+id/skipButton"
        app:leftIcon="@drawable/ic_male_symbol_selector"
        app:rightIcon="@drawable/ic_female_symbol_selector"
        app:leftText="@string/male"
        app:rightText="@string/female"
        />

    <include layout="@layout/onboarding_footer" />
</RelativeLayout>