<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/onboarding_debug_gradient">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_onboarding" />

    <au.com.ahbeard.sleepsense.widgets.SSTextView
        android:id="@+id/titleTextView"
        style="@style/OnboardingText.Title"
        android:layout_below="@+id/toolbar"
        tools:text="What's your gender?"
        />

    <au.com.ahbeard.sleepsense.ui.onboarding.views.SSOnboardingRadioControl
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleTextView"
        android:layout_above="@+id/skipButton"
        app:leftIcon="@drawable/ic_male_symbol_selector"
        app:rightIcon="@drawable/ic_female_symbol_selector"
        app:leftText="@string/male"
        app:rightText="@string/female"
        />

    <au.com.ahbeard.sleepsense.widgets.SSButton
        android:id="@+id/skipButton"
        android:layout_above="@+id/continueButton"
        style="@style/OnboardingButton.Text.Skip" />
    <au.com.ahbeard.sleepsense.widgets.SSButton
        android:id="@+id/continueButton"
        android:layout_alignParentBottom="true"
        style="@style/OnboardingButton.Continue" />
</RelativeLayout>