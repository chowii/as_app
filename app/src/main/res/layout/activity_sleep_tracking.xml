<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sleep_tracking_layout_tracking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sleep_tracking_background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="au.com.ahbeard.sleepsense.activities.SleepTrackingActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/stars_and_moon"/>

        <LinearLayout
            android:id="@+id/sleep_tracking_layout_clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <au.com.ahbeard.sleepsense.widgets.StyledTextView
                android:id="@+id/sleep_tracking_text_view_clock_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="#fff"
                android:textSize="90sp"
                app:typeface="RobotoThin"
                tools:text="88:88"/>

            <au.com.ahbeard.sleepsense.widgets.StyledTextView
                android:id="@+id/sleep_tracking_text_view_clock_am_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:includeFontPadding="false"
                android:textColor="#fff"
                android:textSize="20sp"
                app:typeface="OpenSansRegular"
                tools:text="PM"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sleep_tracking_layout_clock"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/sleep_tracking_button_start_stop"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_white"
                android:text="I'm Awake"
                android:textColor="#3D719C"
                android:textSize="13.45dp"/>


        </LinearLayout>

        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:id="@+id/sleep_tracking_text_view_sample_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:textSize="20sp"
            app:typeface="OpenSansRegular"
            tools:text="0000000"/>

        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:id="@+id/sleep_tracking_text_view_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6dp"
            android:text="Remember to put your phone on charge, we will take care of the rest."
            android:textColor="#fff"
            android:textSize="16sp"
            app:typeface="OpenSansRegular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/sleep_tracking_text_view_bottom"
            android:layout_centerHorizontal="true"
            android:src="@drawable/white_sleep_tick"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sleep_tracking_layout_connecting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sleep_tracking_background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/stars_and_moon"/>


        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:text="Connecting to Sleepsense"
            android:textColor="#fff"
            android:textSize="20sp"
            app:typeface="OpenSansRegular"/>

    </RelativeLayout>

</FrameLayout>

