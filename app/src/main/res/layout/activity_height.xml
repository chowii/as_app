<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_new"
    android:orientation="horizontal"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textHeightHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="@dimen/text_margin"
        android:text="How tall are you?"
        android:textAlignment="center"
        android:textColor="@color/whiteTextColor"
        android:textSize="@dimen/text_header_font_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/scale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="40dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <au.com.ahbeard.sleepsense.widgets.ScaleView
            android:id="@+id/my_scale"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/button_height_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:background="@drawable/sleep_sense_button_transparent"
            android:padding="@dimen/button_padding"
            android:stateListAnimator="@null"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color"
            android:textSize="@dimen/button_font_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_height_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sleep_sense_button_blue"
            android:layout_below="@+id/button_height_skip"
            android:padding="@dimen/button_padding"
            android:layout_margin="@dimen/button_margin"
            android:stateListAnimator="@null"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color"
            android:textSize="@dimen/button_font_size"
            android:textStyle="bold" />
    </RelativeLayout>
</FrameLayout>
