<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <WebView
            android:id="@+id/on_boarding_help_web_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </WebView>

    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBE3E6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical" android:background="#fff">

        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/onBoardBodyTextColor"
            android:lineSpacingExtra="10dp"
            app:typeface="OpenSansRegular"
            android:text="Think you know what went wrong?" android:layout_margin="5dp"/>

        <au.com.ahbeard.sleepsense.widgets.StyledButton
            android:id="@+id/on_board_button_try_again"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/sleep_sense_button_white"
            android:text="Let's try again"
            android:textColor="@color/whiteButtonTextColor"/>

        <au.com.ahbeard.sleepsense.widgets.StyledTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/onBoardBodyTextColor"
            android:lineSpacingExtra="10dp"
            app:typeface="OpenSansRegular"
            android:text="Still having trouble?" android:layout_margin="5dp"/>


        <au.com.ahbeard.sleepsense.widgets.StyledButton
            android:id="@+id/on_board_button_call_for_help"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/sleep_sense_button_blue"
            android:text="Call for help"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>
